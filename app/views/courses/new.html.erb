<h1 class="display-4 p-2">Add Class</h1>

<div class="row">
  <div class="col-4">
    <%= form_with(model: @course, local: true) do |form| %>

      <%= render 'errors', object: @course %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :course_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subject %>
        <%= form.text_field :subject, id: :course_subject, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :level %>
        <%= form.number_field :level, id: :course_level, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :credits %>
        <%= form.number_field :credits, id: :course_credits, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Create Class', class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-8"></div>
</div>